<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nawoori.android.rxandroidbasic05.MainActivity">

    <Button
        android:id="@+id/btnPublish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:onClick="doPublish"
        android:text="Publish"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginStart="56dp"
        tools:layout_editor_absoluteX="56dp" />

    <Button
        android:id="@+id/btnBehavior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="doBehavior"
        android:text="Behavior"
        app:layout_constraintTop_toBottomOf="@+id/btnPublish"
        tools:layout_editor_absoluteY="72dp"
        tools:layout_editor_absoluteX="55dp"
        app:layout_constraintStart_toStartOf="@+id/btnPublish"
        app:layout_constraintEnd_toEndOf="@+id/btnPublish" />

    <Button
        android:id="@+id/btnReplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="doReplay"
        android:text="Replay"
        app:layout_constraintTop_toBottomOf="@+id/btnBehavior"
        tools:layout_editor_absoluteY="140dp"
        tools:layout_editor_absoluteX="56dp"
        app:layout_constraintStart_toStartOf="@+id/btnBehavior"
        app:layout_constraintEnd_toEndOf="@+id/btnBehavior" />

    <Button
        android:id="@+id/btnAscync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:onClick="doAscync"
        android:text="Ascync"
        app:layout_constraintTop_toBottomOf="@+id/btnReplay"
        tools:layout_editor_absoluteX="56dp"
        app:layout_constraintStart_toStartOf="@+id/btnReplay"
        app:layout_constraintEnd_toEndOf="@+id/btnReplay" />

    <Button
        android:id="@+id/btnSubscriber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="getPublish"
        android:text="Subscriber"
        app:layout_constraintTop_toTopOf="@+id/btnPublish"
        app:layout_constraintBottom_toBottomOf="@+id/btnPublish"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/BtnSubscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="getBehavior"
        android:text="Subscribe"
        app:layout_constraintBottom_toBottomOf="@+id/btnBehavior"
        app:layout_constraintStart_toStartOf="@+id/btnSubscriber"
        app:layout_constraintTop_toBottomOf="@+id/btnSubscriber"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="220dp" />

    <Button
        android:id="@+id/BtnSubscribe1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="getReplay"
        android:text="Subscribe"
        app:layout_constraintBottom_toBottomOf="@+id/btnReplay"
        app:layout_constraintStart_toStartOf="@+id/BtnSubscribe"
        app:layout_constraintTop_toBottomOf="@+id/BtnSubscribe"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="188dp" />

    <Button
        android:id="@+id/getAsync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getAsync"
        android:text="getAsync"
        app:layout_constraintTop_toBottomOf="@+id/BtnSubscribe1"
        android:layout_marginTop="8dp"
        tools:layout_editor_absoluteX="189dp"
        app:layout_constraintStart_toStartOf="@+id/BtnSubscribe1" />

</android.support.constraint.ConstraintLayout>
